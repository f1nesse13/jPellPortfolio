<% action_url = action == :new ? users_url : new_session_url %>
<% submit_text = action == :new ? 'Create User' : 'Update'%>
<form action="<%= action_url %>" method="POST">
  <%= auth_token %>
  <% if action == :new %>
    <input type="email" name="user[email]" placeholder='email' value='<%= user.email %>' >
  <% end %>
  <input type="text" name="user[username]" placeholder='username' value='<%= user.username %>' required>
  <input type="password" name="user[password]" placeholder='password' required>
  <input type="password" name="user[password_confimartion]" placeholder='confirm password' required>
  <input type="submit" value="<%= submit_text %>">
</form>
